                        <!-- Foto Profil -->
                            <!-- <img src="img/5d7e27b07cf5d.png" alt="hi" class="img-thumbnail2"> -->
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Jumbotron -->
        < class="jumbotron4 jumbotron-fluid">
            <!-- Movie -->
            <video controls="controls" src="/movie/launch.mp4" id="video" style="width: 700px; height: 350px" autoplay="true"></video>
            
            <canvas id="preview" style="display: none;"></canvas>
            <!-- Chat -->
            <div class="chatbox">
                <div class="chatlogs">
                    <!-- <div class="chat">
                        <div class="user-photo"><img src="img/default.png"></div>
                        <p class="chat-message">Seru banget nih filmnya</p>
                    </div> -->
                </div>
            </div>
            <form class="chat-form">
                <input type="text" placeholder="Say something nice" />
                <button type="submit">Send</button>
            </form>
            </div>
        </div>
        <script type="text/javascript">
            var canvas = document.getElementById("preview");
            var context = canvas.getContext('2d');
            canvas.width = 900;
            canvas.height = 700;

            context.width = canvas.width;
            context.height = canvas.height;

            var video = document.getElementById("video");
            var socket = io('');

            function viewVideo(){
                context.drawImage(video, 0, 0, context.width, context.height);
                socket.emit('stream',canvas.toDataURL('image/webp'));
            }
            $(function(){
                setInterval(function(){
                    viewVideo(video,context);
                },0);
            });
        </script>
        <% include layouts/foot %>
    </body>
</html>