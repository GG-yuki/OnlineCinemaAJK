        <!-- Jumbotron -->
        <div class="jumbotron4 jumbotron-fluid">
            <!-- Movie -->
            <video controls="controls" src="/movie/launch.mp4" id="video" style="width: 680px; height: 320px" autoplay="true"></video>
            
            <canvas style="display: none;" id="preview"></canvas>

            <!-- Chat -->
            <div class="chatbox">
                <div class="chatlogs">

                    <div class="chat">
                        <div class="user-photo"><img src="img/default.png"></div>
                        <p class="chat-message">Seru banget nih filmnya</p>
                    </div>
                    <div class="chat">
                        <div class="user-photo"><img src="img/default.png"></div>
                        <p class="chat-message">Eh Iya, bener banget</p>
                    </div>

                </div>

                <div class="chat-form">
                        <textarea></textarea>
                        <button>Send</button>
                </div>

            </div>
            
        </div>
        <script type="text/javascript">
            var canvas = document.getElementById("preview");
            var context = canvas.getContext("2d");
            
            canvas.width = 800px;
            canvas.height = 600px;
            
            context.width = canvas.width;
            context.height = canvas.height;

            var video = getElementById("video");
            var socket = io();
            
            function loadCam(stream){
                video.src = window.URL.createObjectURL(stream);
                console.log("Film berhasil diputar.");

            }

            function loadFail(){
                console.log("Gagal memutar film.");
            }

            function viewVideo(){
                context.drawImage(video, 0, 0, context.width, context.height);
                socket.emit('stream',canvas.toDataURL('image/webp'));
            }
            $(function(){
                navigator.getUserMedia = (navigator.getUserMedia || navigator.webkitGetUserMedia || navigator.mozGetUserMedia || navigator.msgGetUserMedia);
                if(navigator.getUserMedia){
                    navigator.getUserMedia({video : true}, loadCam, loadFail);
                }
                setInterval(function(){
                    viewVideo(video,context);
                },70);
            });
        </script>
        <% include layouts/foot %>
    </body>
</html>